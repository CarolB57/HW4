<h1>Details about <%= @movie.title %></h1>

<div id="metadata">
  <ul id="details">
    <li>Rating: <%= @movie.rating %></li>
    <li>Released on: <%= @movie.release_date.strftime('%F') %></li>
  </ul>
</div>

<h2>Description:</h2>
<div id="description">
  <p><%= @movie.description %></p>
</div>

<%= link_to 'Edit Info', edit_movie_path(@movie) %>
<%= link_to 'Back to movie list', movies_path, class: 'btn btn-primary' %>

<%= link_to 'Find Movies With Same Director', search_directors_path(@movie) %>


<p>
  <strong>Director:</strong>
  <%= @movie.director %>
</p>